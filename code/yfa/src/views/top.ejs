    <script type="text/javascript">
        function deepFreeze (o) {
            var prop, key;

            // Freeze any unfrozen object
            if(!Object.isFrozen(o))
                Object.freeze(o);

            for (key in o) {
                if (o.hasOwnProperty(key) && o[key] instanceof Object) {
                    deepFreeze(o[key]);
                }
            }
        }
    </script>
